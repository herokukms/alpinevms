# =============================================================================
# Secure Backup Script for Sensitive Data version 2.5
# =============================================================================
#
# This script creates an encrypted backup of sensitive project files including:
# - Environment variables (.env files)
# - SSH keys (if BACKUP_SSH=1 or true)
# - GPG keys (if BACKUP_GPG=1 or true)
# - Cloudflare Worker configuration (.wrangler)
# - VS Code settings and launch configurations
# - Launch scripts
#
# The backup process:
# 1. Validates required environment variables
# 2. Creates a compressed tar.xz archive of specified files
# 3. Calculates SHA256 integrity hash for verification
# 4. Ensures .gitignore excludes the archive from version control
# 5. Encrypts the archive using AES-256-CBC with PBKDF2 key derivation
# 6. Removes the unencrypted archive for security
#
# Requirements:
# - PROJECT_ROOT environment variable must be set
# - CRYPTOKEN environment variable must be set for encryption
# - OpenSSL must be installed
# - tar must be installed
#
# Usage:
#   export PROJECT_ROOT="/path/to/project"
#   export CRYPTOKEN="your-encryption-key"
#   ./store_sensitive_datas
#
# Output:
#   _sensitive_datas/_sensitive_datas.tar.xz.enc (encrypted backup)
# =============================================================================

# Configuration Section
# ====================

# List of files and directories to include in the backup
# Uses glob patterns for flexible file matching
FILES_TO_BACKUP=(
    ".env"                                           # Environment variables
)

# .env file is located one level from this script
# load it
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [ -f "$SCRIPT_DIR/../.env" ]; then
    set -a
    source "$SCRIPT_DIR/../.env"
    set +a
fi

# Determine SSH key to backup
if [ "${BACKUP_SSH}" = "1" ] || [ "${BACKUP_SSH}" = "true" ]; then
    SSH_CMD=$(git config --local core.sshCommand 2>/dev/null)
    if [ -z "$SSH_CMD" ]; then
        SSH_CMD=$(git config --global core.sshCommand 2>/dev/null)
    fi
    if [ -n "$SSH_CMD" ]; then
        SSH_KEY_PATH=$(echo "$SSH_CMD" | sed -n 's/.*-i \([^ ]*\).*/\1/p')
        if [ -n "$SSH_KEY_PATH" ] && [ -f "$SSH_KEY_PATH" ] && [ -f "${SSH_KEY_PATH}.pub" ]; then
            # Copy SSH keys to _sensitive_datas for security
            cp "$SSH_KEY_PATH" _sensitive_datas/ssh_private.key
            cp "${SSH_KEY_PATH}.pub" _sensitive_datas/ssh_public.key
            # Save original path for restoration
            SSH_KEY_FILENAME=$(basename "$SSH_KEY_PATH")
            echo "$SSH_KEY_FILENAME" > _sensitive_datas/ssh_key_filename.txt
            FILES_TO_BACKUP+=("_sensitive_datas/ssh_private.key" "_sensitive_datas/ssh_public.key" "_sensitive_datas/ssh_key_filename.txt")
            echo "✓ SSH key configured for backup: $SSH_KEY_PATH"
        else
            echo "⚠️  SSH key path not found or invalid: $SSH_KEY_PATH"
        fi
    else
        echo "⚠️  No SSH command configured in git config"
    fi
fi

# Determine GPG key to backup
if [ "${BACKUP_GPG}" = "1" ] || [ "${BACKUP_GPG}" = "true" ]; then
    GPG_KEY_ID=$(git config --local user.signingkey 2>/dev/null)
    if [ -z "$GPG_KEY_ID" ]; then
        GPG_KEY_ID=$(git config --global user.signingkey 2>/dev/null)
    fi
    if [ -n "$GPG_KEY_ID" ]; then
        # Export public key
        gpg --export $GPG_KEY_ID > _sensitive_datas/gpg_public.key 2>/dev/null
        # Export private key
        gpg --export-secret-keys $GPG_KEY_ID > _sensitive_datas/gpg_private.key 2>/dev/null
        if [ -s "_sensitive_datas/gpg_public.key" ] && [ -s "_sensitive_datas/gpg_private.key" ]; then
            FILES_TO_BACKUP+=("_sensitive_datas/gpg_public.key" "_sensitive_datas/gpg_private.key")
            echo "$GPG_KEY_ID" > _sensitive_datas/gpg_key_id.txt
            FILES_TO_BACKUP+=("_sensitive_datas/gpg_key_id.txt")
            echo "✓ GPG key configured for backup: $GPG_KEY_ID"
        else
            echo "⚠️  Failed to export GPG key: $GPG_KEY_ID"
            rm -f _sensitive_datas/gpg_*.key _sensitive_datas/gpg_key_id.txt
        fi
    else
        echo "⚠️  No GPG signing key configured in git config"
    fi
fi

# Encryption configuration
# AES-256-CBC with PBKDF2 provides strong encryption with key derivation
# Note: AES-GCM would be preferred for authenticated encryption, but may not be
# supported in all OpenSSL versions. AES-CBC with PBKDF2 is widely compatible.
CIPHER_ALGO="aes-256-cbc"

# PBKDF2 iterations for key derivation (higher = more secure but slower)
# 100,000 iterations provides good security while remaining practical
PBKDF2_ITERATIONS=100000

# =============================================================================
# Main Script Logic
# =============================================================================

# Step 1: Validate environment variables
# --------------------------------------
if [ -z "${PROJECT_ROOT}" ]; then
    echo "ERROR: PROJECT_ROOT is empty: $PROJECT_ROOT"
    echo "Please set PROJECT_ROOT to the project root directory"
    exit -1
fi

cd $PROJECT_ROOT

if [ -z "${CRYPTOKEN}" ]; then
    echo "ERROR: CRYPTOKEN is empty: $CRYPTOKEN"
    echo "Please set CRYPTOKEN to your encryption passphrase"
    exit -1
fi

# Step 2: Create compressed archive
# ---------------------------------
echo "Creating compressed archive of sensitive files..."
rm -f _sensitive_datas/_sensitive_datas.tar.xz
tar -cvJf _sensitive_datas/_sensitive_datas.tar.xz \
    "${FILES_TO_BACKUP[@]}"

# Verify archive was created successfully
if [ -z _sensitive_datas/_sensitive_datas.tar.xz ]; then
    echo "ERROR: Failed to create archive"
    exit 1
fi

# Step 3: Calculate integrity hash
# -----------------------------------
echo "Calculating SHA256 integrity hash..."
ARCHIVE_HASH=$(sha256sum _sensitive_datas/_sensitive_datas.tar.xz | cut -d' ' -f1)
echo "$ARCHIVE_HASH" > _sensitive_datas/_sensitive_datas.tar.xz.sha256
echo "✓ Integrity hash saved: $ARCHIVE_HASH"

# Step 4: Ensure .gitignore excludes the archive
# -----------------------------------------------
GITIGNORE_FILE="$PROJECT_ROOT/_sensitive_datas/.gitignore"
if [ ! -f "$GITIGNORE_FILE" ]; then
    echo "Creating .gitignore file to exclude sensitive archive..."
    # Ensure the directory exists
    mkdir -p "$PROJECT_ROOT/_sensitive_datas"
    echo "_sensitive_datas.tar.xz" > "$GITIGNORE_FILE"
    echo "✓ Created $GITIGNORE_FILE with archive exclusion rules"
elif ! grep -q "^_sensitive_datas\.tar\.xz$" "$GITIGNORE_FILE"; then
    echo "Adding archive exclusion to existing .gitignore..."
    echo "_sensitive_datas.tar.xz" >> "$GITIGNORE_FILE"
    echo "✓ Updated $GITIGNORE_FILE with archive exclusion rules"
else
    echo "✓ Archive exclusion already present in .gitignore"
fi

# Ensure .gitignore excludes GPG key files
if ! grep -q "^gpg_.*\.key$" "$GITIGNORE_FILE"; then
    echo "Adding GPG key files exclusion to existing .gitignore..."
    echo "gpg_*.key" >> "$GITIGNORE_FILE"
    echo "✓ Updated $GITIGNORE_FILE with GPG key exclusion rules"
fi

# Ensure .gitignore excludes SSH key files
if ! grep -q "^ssh_.*\.key$" "$GITIGNORE_FILE"; then
    echo "Adding SSH key files exclusion to existing .gitignore..."
    echo "ssh_*.key" >> "$GITIGNORE_FILE"
    echo "✓ Updated $GITIGNORE_FILE with SSH key exclusion rules"
fi

# Step 5: Encrypt the archive
# ---------------------------
echo "Encrypting archive with ${CIPHER_ALGO}..."
openssl enc -${CIPHER_ALGO} -a -pbkdf2 -iter ${PBKDF2_ITERATIONS} -salt -pass pass:"$CRYPTOKEN" \
    -in _sensitive_datas/_sensitive_datas.tar.xz \
    -out _sensitive_datas/_sensitive_datas.tar.xz.enc

# Verify encryption was successful
if [ $? -ne 0 ]; then
    echo "ERROR: Encryption failed"
    # Don't delete the unencrypted file if encryption failed
    exit 1
fi

# Step 6: Clean up unencrypted archive
# ------------------------------------
echo "Removing unencrypted archive for security..."
rm _sensitive_datas/_sensitive_datas.tar.xz

# Step 7: Confirmation
# -------------------
echo "✓ Backup completed successfully!"
echo "Encrypted backup saved as: _sensitive_datas/_sensitive_datas.tar.xz.enc"
echo "Algorithm used: ${CIPHER_ALGO} with PBKDF2 (${PBKDF2_ITERATIONS} iterations and Passowrd=$CRYPTOKEN)"

# Clean up GPG key files for security
echo "Removing temporary GPG key files for security..."
rm -f _sensitive_datas/gpg_*.key _sensitive_datas/gpg_key_id.txt

# Clean up SSH key files for security
echo "Removing temporary SSH key files for security..."
rm -f _sensitive_datas/ssh_*.key
rm -f _sensitive_datas/ssh_key_filename.txt